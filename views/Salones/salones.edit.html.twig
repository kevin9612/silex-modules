{% extends 'layout.html.twig' %}

{% block title 'Editar Salones' %}

{% block body %}

<form class="form-horizontal" method="post" action="{{ url('salones-save') }}">

  <input type="hidden" name="index" value="{{ index }}">

  <fieldset>

    <!-- Titulo -->
    <legend>Crear o Editar Salon</legend>

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Id</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="id" value="{{ salon_to_edit.id }}"
            placeholder="id salon" required="">
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Nombre</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="nombre" value="{{ salon_to_edit.nombre }}"
            placeholder="nombre del salon" required="">
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Edificio</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="edificio" value="{{ salon_to_edit.edificio }}"
            placeholder="direcciÃ³n del usuario" required="">
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Direccion</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="direccion" value="{{ salon_to_edit.direccion }}"
            placeholder="direccion" required="">
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Capacidad</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="capacidad" value="{{ salon_to_edit.capacidad }}"
            placeholder="Capacidad" required="">
      </div>
    </div>

    <!-- Botones -->
    <div class="form-group">
      <div class="col-md-8">
        <div class="pull-right">
          <button class="btn btn-primary" type="submit">Guardar</button>
            <a href="{{ url('salones-list') }}>" >
            <button class="btn btn-primary">Cancelar</button>
          </a>
        </div>
      </div>
    </div>

  </fieldset>
</form>


{% endblock %}
