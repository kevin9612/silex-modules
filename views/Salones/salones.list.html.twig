

{% extends 'layout.html.twig' %}

{% block title 'Usuarios' %}

{% block body %}

<div class="container">
	<div class="row">

    <div class="col-md-12">
      <legend>Lista de Salones</legend>

      <div class="table-responsive">

        <table id="mytable" class="table table-bordred table-striped">

          <thead>
            <th>Id</th>
            <th>Nombre</th>
             <th>Edificio</th>
            <th>Direcci√≥n</th>
            <th>Capacidad</th>

            <th>Editar</th>
            <th>Borrar</th>
          </thead>

          <tbody>

            {% for index, s in salones %}
            <tr>
              <td>{{ s.id }}</td>
              <td>{{ s.nombre }}</td>
              <td>{{ s.edificio }}</td>
              <td>{{ s.direccion }}</td>
              <td>{{ s.capacidad }}</td>
              <td>
                <p data-placement="top" data-toggle="tooltip" title="Editar">
                  <a href="{{ url('salones-edit', { index: index }) }}">
                    <button class="btn btn-primary btn-xs" data-title="Editar" >
                      <i class="glyphicon glyphicon-pencil"></i>
                    </button>
                  </a>
                </p>
              </td>
              <td>
                <p data-placement="top" data-toggle="tooltip" title="Borrar">
                  <a href="{{ url('salones-delete', { index: index }) }}">
                    <button class="btn btn-danger btn-xs" data-title="Borrar">
                      <i class="glyphicon glyphicon-trash"></i>
                    </button>
                  </a>
                </p>
              </td>
            </tr>
            {% endfor %}

          </tbody>

        </table>

      </div>
    </div>
  </div>
</div>

{% endblock %}